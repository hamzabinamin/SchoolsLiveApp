    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hamzabinamin.schoolsliveapp.LogInActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/splash"/>

    <Button
        android:id="@+id/phoneNumberButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="Phone Number"
        android:textColor="@color/colorWhite"
        android:background="@drawable/roundedgreen"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/phoneNumberButton"
        android:layout_marginBottom="15dp"
        android:text="Sign Up or Log In with"
        android:textSize="16dp"
        android:textColor="@color/colorWhite" />

