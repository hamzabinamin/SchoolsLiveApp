<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark"
    android:id="@+id/navigation_action"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/schoolTypeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="HIGH SCHOOL"
            android:textSize="12dp"
            android:textColor="@color/colorWhite"/>

        <TextView
            android:id="@+id/schoolNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/schoolTypeTextView"
            android:layout_marginTop="5dp"
            android:text="PAARL GYMNASIUM"
            android:textSize="18dp"
            android:textColor="@color/colorWhite"/>

        <TextView
            android:id="@+id/schoolLocationTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="50dp"
            android:layout_below="@id/schoolNameTextView"
            android:text="Paarl, South Africa"
            android:textSize="12dp"
            android:textColor="@color/colorWhite"/>

        <TextView
            android:id="@+id/schoolLinkTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/schoolNameTextView"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="50dp"
            android:text="www.paarlgim.com"
            android:textSize="12dp"
            android:textColor="@color/colorWhite"/>

    </RelativeLayout>


</android.support.v7.widget.Toolbar>